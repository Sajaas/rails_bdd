Article was successfully created.

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>
<p>
  <strong>Content:</strong>
  <%= @article.content %>
</p>

<% if @article.comments.any? %>
    <h2>Comments</h2>
    <% @article.comments.each do |comment| %>
      <% unless comment.commenter.blank? %>
          <p>
          <strong>Commenters email:</strong>
          <%= comment.commenter %>
        </p>
      <% end %>
      <p>
        <strong>Comment:</strong>
        <%= comment.body %>
      </p>
      <br>
  <% end %>
<% end %>

<h3>Comment on article:</h3>
<%= form_with(model: [ @article, @article.comments.build ], local: true) do |form| %>

    <% if @article.comments.build.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@comment.errors.count, 'error') %>
          </h2>
          <p>Please address these issues:</p>
          <ul>
            <% @comment.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <p>
      <%= form.label :Email %><br>
      <%= form.text_field :commenter, placeholder: 'Email (optional)' %>
    </p>
    <p>
      <%= form.label :Comment %><br>
      <%= form.text_area :body, placeholder: 'Comment' %>
    </p>
    <p>
      <%= form.submit %>
    </p>
<% end %>

